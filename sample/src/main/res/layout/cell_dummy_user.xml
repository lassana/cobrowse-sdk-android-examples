<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/text_margin"
    android:paddingBottom="@dimen/text_margin"
    android:paddingStart="@dimen/list_horizontal_margin"
    android:paddingEnd="@dimen/list_horizontal_margin">

    <ImageView
        android:id="@+id/layout_data_binding_sample_list_icon"
        android:contentDescription="@null"
        android:src="@color/accentColor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/layout_data_binding_sample_list_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Lorem Ipsum"
        android:layout_marginStart="@dimen/text_margin"
        app:layout_constraintStart_toEndOf="@id/layout_data_binding_sample_list_icon"
        app:layout_constraintTop_toTopOf="@id/layout_data_binding_sample_list_icon"
        app:layout_constraintBottom_toBottomOf="@id/layout_data_binding_sample_list_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>